<%= form_with model: book, local: true do |form| %>
<%# Cold be with model method above or line below: 
 <%= form_with url: "/books", method: :post, scope: :book do |form| %>
    <div> 
        <% form.label :title, "Title" %>
        <%= form.text_field :title %>
    </div>
    <div> 
        <% form.label :published, "Published" %>
        <%= form.date_field :published %>
    </div> 
    <div> 
        <% form.label :sales, "Sales" %>
        <%= form.number_field :sales %>
    </div> 
    <div> 
        <% form.label :genre, "Genre" %>
        <%= form.select :genre, {"Thriller": 1, "Romcom": 2, "Drama": 3, "Horror": 4} %>
    </div>
    <%= form.submit %>

<% end %>
